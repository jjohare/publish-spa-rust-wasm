{
  "name": "@thedreamlab/logseq-publisher",
  "version": "0.1.0",
  "description": "Fast Logseq graph parser and publisher powered by Rust and WASM",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "logseq-publish": "./bin/cli.mjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jjohare/logseq.git",
    "directory": "logseq-publisher/logseq-publisher-npm"
  },
  "homepage": "https://thedreamlab.uk",
  "scripts": {
    "build:wasm": "cd ../logseq-publisher-rust && wasm-pack build --target bundler --out-dir ../logseq-publisher-npm/pkg",
    "build:bundle": "tsc",
    "build": "npm run build:wasm && npm run build:bundle",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "logseq",
    "markdown",
    "publisher",
    "wasm",
    "rust",
    "static-site-generator"
  ],
  "author": "The Dream Lab <github@thedreamlab.uk>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.10.0",
    "@parcel/transformer-typescript-types": "^2.10.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "parcel": "^2.10.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist",
    "pkg",
    "bin",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "targets": {
    "node": {
      "context": "node",
      "distDir": "dist",
      "outputFormat": "commonjs"
    }
  }
}
